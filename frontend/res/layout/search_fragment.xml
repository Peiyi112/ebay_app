<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/keywordtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keyword"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/keywordinput"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="48dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="bottom"
        android:hint="Enter Keyword"
        android:inputType="text"
        android:paddingLeft="3dp"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/keywordalert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter mandatory field"
        android:textSize="15sp"
        android:textColor="#FF0000"
        />
    <TextView
        android:id="@+id/categorytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="15sp"
        />

    <Spinner
        android:id="@+id/categoryoptions"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/conditiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition"
        android:textSize="15sp"
        />
    <LinearLayout
        android:id="@+id/conditionoptions"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="start"
        android:paddingLeft="3dp"
        >


        <CheckBox
            android:id="@+id/New"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:buttonTint="@color/tab_background_color"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="New"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/Used"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:buttonTint="@color/tab_background_color"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Used"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/Unspecified"
            android:layout_width="110dp"
            android:buttonTint="@color/tab_background_color"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Unspecified"
            android:textSize="13sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/shippingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:text="Shipping Options"
        android:textSize="15sp"
        />

    <LinearLayout
        android:id="@+id/shippingoptions"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="start"
        android:paddingLeft="3dp"
        >


        <CheckBox
            android:id="@+id/local"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:buttonTint="@color/tab_background_color"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Local Pickup"
            android:textSize="13sp" />
        <CheckBox
            android:id="@+id/freeship"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:buttonTint="@color/tab_background_color"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Free Shipping"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/enable"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="3dp"
        android:gravity="start"
        android:paddingLeft="3dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="Enable Nearby Search"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/nearby"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:buttonTint="@color/tab_background_color"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAdditional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/distancetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/distanceinput"
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="48dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="bottom"
            android:hint="Miles from"
            android:inputType="number"
            android:paddingLeft="3dp"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textSize="15sp"
            />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingLeft="35dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/current"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:buttonTint="@color/tab_background_color"
                    android:gravity="center_vertical"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Currenttext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="Current Location"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_enter_zip"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:buttonTint="@color/tab_background_color"
                    android:gravity="center_vertical"
                    android:textSize="15sp" />
                <AutoCompleteTextView
                    android:id="@+id/ZipCodeinput"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:gravity="center_vertical"
                    android:hint="zipcode"
                    android:inputType="number"
                    android:textSize="13sp" />


            </LinearLayout>

        </RadioGroup>
        <TextView
            android:id="@+id/zipalert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter mandatory field"
            android:textSize="15sp"
            android:textColor="#FF0000"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/search"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonsytle"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="SEARCH"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            />


        <Button
            android:id="@+id/clear"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/buttonsytle"
            android:text="CLEAR"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
</ScrollView>