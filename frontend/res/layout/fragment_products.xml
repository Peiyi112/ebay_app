<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <ProgressBar
            android:id="@+id/Bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="#778899"
            android:indeterminateTintMode="src_in"
            android:indeterminate="true" />
            <TextView
                android:id="@+id/BarTEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="Fetching Product Details..."
                android:textColor="#7B68EE"
                android:textSize="20dp"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/all">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/imagegallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </HorizontalScrollView>

    <TextView
        android:id="@+id/title"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/pricewithshipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#8A2BE2" />


    <!-- Highlights -->
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
    <TextView
        android:id="@+id/highlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Highlights"
        android:textStyle="bold"
        android:textColor="#808080" />

    <!-- Price and Brand -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pricelabel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Price"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#808080" />

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#808080" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/brandtotal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brandlabel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Brand"
            android:textColor="#808080" />

        <TextView
            android:id="@+id/brand"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#808080" />
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <!-- Specifications -->
    <TextView
        android:id="@+id/Specilabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Specifications"
        android:textColor="#808080" />
    <LinearLayout
        android:id="@+id/specificationsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp">
        <!-- 动态添加的视图将放置在这里 -->
    </LinearLayout>

    <!-- 您可以在这里添加更多组件 -->
    </LinearLayout>
    </FrameLayout>
</ScrollView>